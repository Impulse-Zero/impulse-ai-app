{
  "name": "impulse-ai-app",
  "version": "1.0.0",
  "description": "AI Username Generator - Impulse AI with Neural Network",
  "main": "main.js",
  "homepage": "https://github.com/pirokan/impulse-ai-app",
  "bugs": {
    "url": "https://github.com/pirokan/impulse-ai-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pirokan/impulse-ai-app.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-windows": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder -wml",
    "generate-keys": "node keys-generator.js",
    "deploy": "node build.js"
  },
  "build": {
    "appId": "com.pirokan.impulse-ai",
    "productName": "Impulse AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!*.md",
      "!dist/",
      "!keys-*.txt"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  },
  "author": {
    "name": "pirokan",
    "email": "pirokan@example.com"
  },
  "license": "MIT"
}
